<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group_2.ui.core.SettingsController"
            styleClass="dashboard-root"
            stylesheets="@/css/styles.css"
            prefWidth="1000" prefHeight="700">

    <!-- Top Header -->
    <top>
        <HBox styleClass="navbar" spacing="0" alignment="CENTER_LEFT">
            <Button onAction="#backToHome" styleClass="navbar-back-button">
                <graphic>
                    <ImageView fitWidth="35" fitHeight="35" preserveRatio="true">
                        <Image url="@/pictures/SE_Hommunity.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Text text="WG Settings" styleClass="navbar-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Text fx:id="wgNameHeader" text="Home Name" styleClass="navbar-wg-name"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" style="-fx-background-color: #f8fafc;">
            <VBox spacing="25" style="-fx-background-color: #f8fafc; -fx-padding: 30;">

                <!-- Invitation Code Card -->
                <VBox styleClass="card" spacing="15" style="-fx-padding: 25;">
                    <HBox alignment="CENTER_LEFT" spacing="10">

                        <Text text="Invitation Code" styleClass="card-title"/>
                    </HBox>
                    <Text text="Share this code with others to invite them to your WG" styleClass="card-subtitle"/>
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <StackPane style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-padding: 0 25;" minHeight="48">
                            <Text fx:id="inviteCodeText" text="ABCD1234" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #6366f1; -fx-font-family: monospace;"/>
                        </StackPane>
                        <Button text="Copy Invite Code" onAction="#copyInviteCode" minHeight="48">
                            <styleClass>
                                <String fx:value="secondary-button"/>
                                <String fx:value="accent"/>
                            </styleClass>
                        </Button>
                    </HBox>
                </VBox>

                <!-- Admin Info Card (only visible to admin) -->
                <VBox fx:id="adminCard" styleClass="card" spacing="15" style="-fx-padding: 25;" visible="false" managed="false">
                    <HBox alignment="CENTER_LEFT" spacing="10">

                        <Text text="Admin Controls" styleClass="card-title"/>
                    </HBox>
                    <Text text="You are the admin of this WG" styleClass="card-subtitle"/>
                    <HBox spacing="15">
                        <Button text="Edit Home Name" onAction="#editWgName">
                            <styleClass>
                                <String fx:value="secondary-button"/>
                                <String fx:value="accent"/>
                            </styleClass>
                        </Button>
                        <Button text="Delete Home"
                                onAction="#deleteWG"
                                styleClass="danger-button"/>
                    </HBox>
                </VBox>

                <!-- Rooms Section -->
                <VBox styleClass="card" spacing="15" style="-fx-padding: 25;">
                    <HBox alignment="CENTER_LEFT">
                        <HBox spacing="10" alignment="CENTER_LEFT">

                            <Text text="Rooms" styleClass="card-title"/>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addRoomButton" text="+ Add Room" onAction="#addRoom"
                                styleClass="primary-button" style="-fx-padding: 8 16;"/>
                    </HBox>
                    <Text fx:id="roomCountText" text="0 rooms in your home" styleClass="card-subtitle"/>
                    <VBox fx:id="roomsBox" spacing="10">
                        <!-- Rooms will be added here dynamically -->
                    </VBox>
                </VBox>

                <!-- Members Section -->
                <VBox styleClass="card" spacing="15" style="-fx-padding: 25;">
                    <HBox alignment="CENTER_LEFT">
                        <HBox spacing="10" alignment="CENTER_LEFT">

                            <Text text="Members" styleClass="card-title"/>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Copy Invite Code" onAction="#copyInviteCode">
                            <styleClass>
                                <String fx:value="secondary-button"/>
                                <String fx:value="accent"/>
                            </styleClass>
                        </Button>
                    </HBox>
                    <Text fx:id="memberCountText" text="0 members in your home" styleClass="card-subtitle"/>
                    <VBox fx:id="membersBox" spacing="10">
                        <!-- Members will be added here dynamically -->
                    </VBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
