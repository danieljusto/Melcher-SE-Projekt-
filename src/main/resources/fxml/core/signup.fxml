<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.group_2.ui.core.SignUpController"
      spacing="15"
      alignment="CENTER"
      styleClass="root-pane"
      stylesheets="@/css/styles.css">

    <Text text="Create Account" styleClass="title-text"/>

    <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
        <Label text="Name" styleClass="field-label"/>
        <TextField fx:id="signupNameField" styleClass="text-field"/>
    </VBox>
    
    <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
        <Label text="Surname" styleClass="field-label"/>
        <TextField fx:id="signupSurnameField" styleClass="text-field"/>
    </VBox>
    
    <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
        <Label text="Email" styleClass="field-label"/>
        <TextField fx:id="signupEmailField" styleClass="text-field"/>
    </VBox>
    
    <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="300">
        <Label text="Password" styleClass="field-label"/>
        <StackPane>
            <PasswordField fx:id="signupPasswordField" styleClass="text-field, password-field-with-toggle"/>
            <TextField fx:id="signupPasswordTextField" styleClass="text-field, password-field-with-toggle" visible="false" managed="false"/>
            <HBox alignment="CENTER_RIGHT" pickOnBounds="false" mouseTransparent="false">
                <Button fx:id="togglePasswordButton" text="â—‰" onAction="#togglePasswordVisibility" styleClass="password-toggle-button"/>
            </HBox>
        </StackPane>
    </VBox>

    <Button text="Sign Up" onAction="#handleSignup" styleClass="success-button"/>
    
    <Hyperlink text="Already have an account? Login" onAction="#showLoginScreen"/>

</VBox>
