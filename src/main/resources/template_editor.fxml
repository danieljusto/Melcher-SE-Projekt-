<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.group_2.ui.TemplateEditorController"
            styleClass="dashboard-root"
            stylesheets="@/styles.css"
            prefWidth="1000" prefHeight="700">

    <!-- Top Header -->
    <top>
        <fx:include source="navbar.fxml" fx:id="navbar"/>
    </top>

    <!-- Main Content -->
    <center>
        <VBox style="-fx-background-color: #f8fafc; -fx-padding: 25;">
            
            <!-- Header with Actions -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 15 0;">
                <VBox spacing="5">
                    <Text fx:id="headerTitle" text="Default Weekly Template" 
                          style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                    <Text text="Define tasks that repeat every week" 
                          style="-fx-font-size: 13px; -fx-fill: #64748b;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                
                <VBox alignment="CENTER" spacing="2" 
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 12 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                    <Text fx:id="templateCountText" text="0" 
                          style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-fill: #6366f1;"/>
                    <Text text="Tasks" style="-fx-font-size: 11px; -fx-fill: #64748b;"/>
                </VBox>
            </HBox>

            <!-- Action Toolbar -->
            <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 0 0 20 0;">
                <Button text="âž• Add Task" onAction="#showAddTemplateDialog"
                        style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 13px;"/>
                <Button text="ðŸ—‘ï¸ Clear All" onAction="#clearAllTemplates"
                        style="-fx-background-color: white; -fx-text-fill: #dc2626; -fx-background-radius: 8; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 13px; -fx-border-color: #fecaca; -fx-border-radius: 8;"/>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <Button text="âœ… Save \&amp; Apply" onAction="#saveAndApplyTemplate"
                        style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 24; -fx-cursor: hand; -fx-font-size: 13px; -fx-font-weight: bold;"/>
                
                <!-- Info Badge -->
                <HBox spacing="8" alignment="CENTER" 
                      style="-fx-background-color: #eef2ff; -fx-background-radius: 8; -fx-padding: 10 16;">
                    <Text text="â„¹ï¸" style="-fx-font-size: 14px;"/>
                    <Text text="This template applies to every new week" 
                          style="-fx-font-size: 12px; -fx-fill: #4338ca;"/>
                </HBox>
            </HBox>

            <!-- Day Columns -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                <HBox spacing="10" alignment="TOP_LEFT">
                    
                    <!-- Monday -->
                    <VBox fx:id="mondayColumn" spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15;" prefWidth="160" minWidth="160">
                        <Text text="Monday" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                    </VBox>
                    
                    <!-- Tuesday -->
                    <VBox fx:id="tuesdayColumn" spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15;" prefWidth="160" minWidth="160">
                        <Text text="Tuesday" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                    </VBox>
                    
                    <!-- Wednesday -->
                    <VBox fx:id="wednesdayColumn" spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15;" prefWidth="160" minWidth="160">
                        <Text text="Wednesday" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                    </VBox>
                    
                    <!-- Thursday -->
                    <VBox fx:id="thursdayColumn" spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15;" prefWidth="160" minWidth="160">
                        <Text text="Thursday" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                    </VBox>
                    
                    <!-- Friday -->
                    <VBox fx:id="fridayColumn" spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 15;" prefWidth="160" minWidth="160">
                        <Text text="Friday" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #1e293b;"/>
                    </VBox>
                    
                    <!-- Saturday -->
                    <VBox fx:id="saturdayColumn" spacing="10" style="-fx-background-color: #f8fafc; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #e2e8f0; -fx-border-radius: 12;" prefWidth="160" minWidth="160">
                        <Text text="Saturday" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #94a3b8;"/>
                    </VBox>
                    
                    <!-- Sunday -->
                    <VBox fx:id="sundayColumn" spacing="10" style="-fx-background-color: #f8fafc; -fx-background-radius: 12; -fx-padding: 15; -fx-border-color: #e2e8f0; -fx-border-radius: 12;" prefWidth="160" minWidth="160">
                        <Text text="Sunday" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-fill: #94a3b8;"/>
                    </VBox>
                    
                </HBox>
            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
